@import '../../../common/stylus/mixins.styl'
.header-top
  width 100%
  height 2rem
  background #fff
  text-align center
  line-height 2rem
  display flex
  justify-content space-between
  .left
    font-size 0.7rem
    margin-left 7rem
  .right
    font-size 0.6rem
    color #B4282D
    margin-right 1.5rem

.content
  margin-top 0.4rem
  .good-serve
    display flex
    li
      flex 1
      text-align center
      >i
        font-size 0.5rem
        transform scale(0.1)
      >span
        font-size 0.5rem
        color #666
.image
  width 100%
  position absolute
  top 50%
  transform translateY(-50%)
  display flex
  flex-direction column
  align-items center
  color #999
  >i
    font-size 5rem
  >span
    font-size 0.5rem
.btn-login
  position absolute
  bottom 30%
  left 50%
  width 60%
  height 2rem
  background #b4282d
  outline none
  border 0
  font-size 0.7rem
  color #fff

  transform translateX(-50%)


